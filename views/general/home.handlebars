
<div class="home-container">
    <div class="promotion-banner-container">
        <img class="promotion-banner"src="./img/slide img 3.jpg">        
    </div>
    <br><br>
    {{#if checkoutMessage}}
        <h1 class="bg-dark">THANKS FOR PURCHASING</h1>
    {{/if}}
    <div class="categories">
        <h2 class="category-title">Category</h2>
        <div class="category-image-container text-center">
            <form method="GET" action="/products/allProducts/{{category}}" class="form-inline">
                {{#each data}}
                    {{#if cc}}
                    <ul class="category-list"> 
                        <a href="/products/{{this.category}}" class="text-decoration-none text-black-50"><h6 class="category-name">{{this.category}}</h6>        
                        <img class="category-image" src="/imguploaded/{{this.imgSrc}}"></ul></a>
                    {{/if}}          
                {{/each}}
            </form>
        </div>
    </div>
    <br><br>
    <div class="best-sellers">
        <h2 class="category-title">Best Sellers</h2>
        <div class="category-image-container">
        {{#each data}} 
        {{#if isBestSeller}}    
       
            <ul class="category-list">      
            <a href="/products/productDetails/{{this.id}}"><img class="category-image" src="/imguploaded/{{this.imgSrc}}"></a></ul>  
      
        {{/if}}     
        {{/each}}
        </div>
    </div>
</div>


